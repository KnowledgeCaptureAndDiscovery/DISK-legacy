<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
	xmlns:i='urn:import:com.vaadin.polymer.iron.widget'
	xmlns:v='urn:import:com.vaadin.polymer.vaadin.widget'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:HTMLPanel>
		<style is="custom-style">
			.title-row {
				display: flex;
				align-items: center;
				padding: 2px 5px 0px 5px;
			}
			.title-row > iron-icon {
				width: 30px;
			}
			.title-row > .title {
				width: calc(100% - 70px);
			}
			.title {
				font-weight: bold;
				font-size: medium;
			}
			.description {
				font-size: small;
				color: #999;
			}
			.info {
				display: flex;
				flex-direction: column;
				align-items: end;
				line-height: normal;
				font-size: small;
			}
			.info > span {
				white-space: nowrap;
			}
			.create-button {
				padding: 4px;
				width: 32px;
				height: 32px;
				margin-left: 4px;
			}
			hr {
				margin: 0px 10px;
				border-bottom: 0px;
				border-color: #fff;
			}
			.hyp-container {
				border: 1px solid #e5e5e5;
				margin: 5px;
			}
			.hyp-container:hover {
				background-color: #f5f5f5;
			}
			.desc-row {
				padding: 0px 20px;
			}
		</style>

    	<div class="hyp-container">
    		<div class="title-row">
				<iron-icon icon="help-outline" style="color: orange; margin-right: 4px;"></iron-icon>
				<div class="title" ui:field="title"></div>
				<div class="info" ui:field="info"></div>
				<p:PaperIconButton class="create-button" icon="create" ui:field="editButton"></p:PaperIconButton>
    		</div>
    		<hr/>
    		<div class="desc-row">
				<div class="description" ui:field="description"></div>
				<label>Matching lines of inquiry:</label>
    			<div ui:field="executions"></div>
    		</div>
    	</div>
    </g:HTMLPanel>
</ui:UiBinder>