<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:l='urn:import:org.diskproject.client.components.loader'	
	xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
	xmlns:lw='urn:import:org.diskproject.client.components.list'	
	xmlns:tr='urn:import:org.diskproject.client.components.triples'	
	xmlns:n='urn:import:com.vaadin.polymer.neon.widget'
	>

	<g:HTMLPanel>
		<style is="custom-style">
            .list .item {
                @apply(--layout-horizontal);
                margin: 16px 16px 0 16px;
                padding: 20px;
                background-color: #eee;
                border: 1px solid #e5e5e5;
            }
            .list paper-item {
                border-top: 1px dotted #e5e5e5;
                padding: 2px;
                font-size: 13px;
                min-height: 32px;
            }
            .list paper-item.both-borders {
                border-bottom: 1px dotted #e5e5e5;
            }
            .list paper-item:first-of-type {
                border-top: 0px;
            }
            .list paper-item iron-icon {
                margin-right: 8px;
                margin-left: 8px;
                min-width: 18px;
                width: 18px;
                height: 18px;
            }
            .list paper-item iron-icon.transparent {
                opacity: 0;
            }
            div.padded {
                padding-left: 10px;
                padding-right: 10px;
            }      
            .list paper-item.header {
                font-weight: 500;
                background-color: #f5f5f5;
                cursor: default;
                font-size: 13px;
            }
            paper-item.no-padding {
            	padding: 0px;
            }
            paper-icon-button.blue {
            	color: var(--paper-green-500);
            }
            .list paper-item iron-icon.blue {
                background-color: transparent;
                border: 0px;
            }
			.list paper-item iron-icon.blue {
                background-color: transparent;
                border: 0px;
            }
            div.content {
            	padding: 0px;
            }
            div.outlined {
                border-radius: 8px;
                border: 1px solid #e5e5e5;
                margin: 10px;
			}
            paper-fab.addicon {
            	position: fixed;
            	right: 10px;
            	top: 10px;
            }
            .ontolist {
                padding: 5px 20px;
                font: 12px Monaco, Consolas, "Andale Mono", "DejaVu Sans Mono", monospace;
            }
            .ontoentry {
            	display: flex;
            	justify-content: space-between;
            	border: 1px solid darkgray;
    			border-radius: 4px;
    			padding: 1px 10px;
    			line-height: 24px;
    			margin-bottom: 4px;
    		}
		</style>
		<p:PaperFab ui:field="addicon" icon="add" mini="true" style="--paper-fab-background: var(--paper-blue-200);"
			addStyleNames="addicon" title="Add Data" tabindex="0" disabled="true"/>
		<div style="padding: 4px 10px; font-size: 14px;">
			A list of all the ontologies currently loaded in the system is displayed below.
			To add a new Ontologies click on the top-right button.
		</div>
		<div class="ontolist">
			<div class="ontoentry">
				<span>https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/disk/release/1.1.0/ontology.ttl</span>
				<a target="_blank" href="https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/disk/release/1.1.0/ontology.ttl">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/enigma_hypothesis/release/2.0.0/ontology.ttl</span>
				<a target="_blank" href="https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/enigma_hypothesis/release/2.0.0/ontology.ttl">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/omics_hypothesis/release/0.0.1/ontology.ttl</span>
				<a target="_blank" href="https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/omics_hypothesis/release/0.0.1/ontology.ttl">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>	
			</div>
			<div class="ontoentry">
				<span>https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/hypothesis/release/0.0.1/ontology.owl</span>
				<a target="_blank" href="https://knowledgecaptureanddiscovery.github.io/DISK-Ontologies/hypothesis/release/0.0.1/ontology.owl">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>http://www.w3.org/2002/07/owl#</span>
				<a target="_blank" href="http://www.w3.org/2002/07/owl#">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>http://www.w3.org/1999/02/22-rdf-syntax-ns#</span>
				<a target="_blank" href="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>http://www.w3.org/2000/01/rdf-schema#</span>
				<a target="_blank" href="http://www.w3.org/2000/01/rdf-schema#">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>http://www.w3.org/2001/XMLSchema#</span>
				<a target="_blank" href="http://www.w3.org/2001/XMLSchema#">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>http://purl.org/dc/terms/</span>
				<a target="_blank" href="http://purl.org/dc/terms/">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
			<div class="ontoentry">
				<span>http://purl.org/dc/elements/1.1/</span>
				<a target="_blank" href="http://purl.org/dc/elements/1.1/">
				    <p:PaperIconButton addStyleNames="linkicon smallicon" style="padding: 0px; height: 20px; width: 20px;" icon="link" />
				</a>
			</div>
		</div>
		<div style="padding: 4px 10px; font-size: 14px;">
			You can also add data directly below:
		</div>
		<l:Loader ui:field="loader" />
		<div class="outlined">
			<lw:ListWidget ui:field="datalist" styleName="list" />
		</div>
		<g:HTMLPanel ui:field="form" styleName="padded">
			<div class="vertical center-justified layout">
				<div class="vertical-section">
					<label class="small-grey">Metadata (Ctrl-Space for suggestions)</label>
					<tr:TripleInput ui:field="triples" />
				</div>
			</div>
			<div class="horizontal end-justified layout">
				<p:PaperButton ui:field="savebutton">
					<iron-icon icon="save" />Save</p:PaperButton>
			</div>
		</g:HTMLPanel>		
	</g:HTMLPanel>
</ui:UiBinder>