<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:i='urn:import:com.vaadin.polymer.iron.widget'
	xmlns:tr='urn:import:org.diskproject.client.components.triples'
	xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

	<g:HTMLPanel>
    <style>
      .code {
        font:12px Monaco,Consolas,"Andale  Mono","DejaVu Sans Mono",monospace;
        font-weight: bold;
      }
    </style>
	
		<div class="vertical center-justified layout">
			<div class="vertical-section">
				<paper-input label="Short Description" required="true" 
					autoValidate="true" ui:field="name" />
				<paper-textarea label="Long Description" required="true"
					autoValidate="true" ui:field="description" />
				<label class="small-grey">Formal Description</label>
				<div>
				  Resources defined on <b>Data</b> must use <span class="code">user:</span> as prefix.
				  You can also use 
			   <a class="code" target="_blank" href="http://disk-project.org/ontology/omics#">bio:</a>,
			   <a class="code" target="_blank" href="http://disk-project.org/ontology/hypothesis#">hyp:</a> and 
			   <a class="code" target="_blank" href="https://w3id.org/disk/ontology/enigma_hypothesis#">neuro:</a>
				  prefixes (Ctrl-Space for suggestions).
				</div>
				<tr:HypothesisTripleInput ui:field="triples" />
			</div>
		</div>
		<div class="horizontal end-justified layout">
			<p:PaperButton ui:field="savebutton">
				<iron-icon icon="save" />
				Save
			</p:PaperButton>
			<p:PaperButton ui:field="runbutton">
				<iron-icon icon="done" />
				Query
			</p:PaperButton>
		</div>
		
		<p:PaperDialog ui:field="triggerdialog">
			<p:PaperDialogScrollable ui:field="dialogcontent">
			</p:PaperDialogScrollable>
			<div class="buttons">
				<p:PaperButton attributes="dialog-dismiss">Close</p:PaperButton>
			</div>
		</p:PaperDialog>		
	</g:HTMLPanel>
</ui:UiBinder>